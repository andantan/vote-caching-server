{
  "env": {
    "node": true,
    "es2024": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "single"],
    "indent": ["error", 4],
    "no-trailing-spaces": "error",
    "comma-dangle": ["error", "always-multiline"]
  }
}